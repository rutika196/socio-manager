<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/finalproject</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.pool_size">10</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Mapping files -->
 
 
	<mapping resource="VO/SocDetail.hbm.xml"/>
	<mapping resource="VO/Chairman.hbm.xml"/> 
	<mapping resource="VO/Country.hbm.xml"/>  
	<mapping resource="VO/State.hbm.xml"/>
	<mapping resource="VO/City.hbm.xml"/>
	<mapping resource="VO/user.hbm.xml"/>
	<mapping resource="VO/resident.hbm.xml"/>
	<mapping resource="VO/event.hbm.xml"/>
	<mapping resource="VO/notify.hbm.xml"/>
	
	
	 
</session-factory>
</hibernate-configuration>